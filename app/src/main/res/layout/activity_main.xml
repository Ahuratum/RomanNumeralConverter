<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/convertToRoman"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:text="@string/ConvertToRoman"
        app:layout_constraintBottom_toTopOf="@+id/romanOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumber" />

    <Button
        android:id="@+id/convertToNumber"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:text="@string/ConvertToNumber"
        app:layout_constraintBottom_toTopOf="@+id/numberOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRoman" />

    <EditText
        android:id="@+id/editRoman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:ems="10"
        android:hint="@string/RomanHint"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/convertToNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/romanOutput"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/NumberHint"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/convertToRoman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/romanOutput"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toTopOf="@+id/editRoman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertToRoman" />

    <TextView
        android:id="@+id/numberOutput"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertToNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>